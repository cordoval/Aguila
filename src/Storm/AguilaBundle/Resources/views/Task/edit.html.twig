{% extends 'AguilaBundle::layout.html.twig' %}

{% block title "#" ~ task.id ~ ": " ~ task.description %}

{% block content %}

<section>
    <form action="{{ path('task_update', { 'id': task.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        {{ form_widget(edit_form) }}
        <a href="{{ path('task_show', {'id': task.id}) }}">{{ 'task.edit.cancel'|trans([], 'AguilaBundle') }}</a>
        <button type="submit">{{ 'task.edit.submit'|trans([], 'AguilaBundle') }}</button>
    </form>
</section>

{% endblock %}