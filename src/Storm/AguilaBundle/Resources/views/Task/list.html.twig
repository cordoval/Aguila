{% for task in tasks %}
<div>
    <h3><a href="{{ path('task_show', {'id': task.id}) }}">{{ task.description }}</a></h3>
    <p>
        {{ 'task.list.reported_by'|trans([], 'AguilaBundle') }} <strong>{{ task.reporter }}</strong>
        {% if task.assignee %}
        {{ 'task.list.and_assignee'|trans([], 'AguilaBundle') }} <strong>{{ task.assignee }}</strong>
        {% endif %}
    </p>
</div>
{% else %}
<div>
    {{ "task.list.no_tasks"|trans([], 'AguilaBundle') }}
</div>
{% endfor %}