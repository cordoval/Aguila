{% extends '::base.html.twig' %}

{% block title "Aguila" %}

{% block stylesheets %}
    {% stylesheets filter='less' output='/css/main.css'
            '@AguilaBundle/Resources/less/site.less'
        %}
    <link href="{{ asset_url }}" rel="stylesheet" media="screen"/>
    {% endstylesheets %}

    {% javascripts output='/js/main.js'
            '@AguilaBundle/Resources/public/js/*'
        %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}

{% block body %}

{% include 'AguilaBundle::topbar.html.twig' %}

<div class="container-fluid">
    <div class="sidebar">
        {% block sidebar %}{% endblock %}
    </div>

    <div class="content">
        {% block breadcrumb %}{% endblock %}
        {% block content %}{% endblock %}
    </div>
</div>

{% endblock body %}
