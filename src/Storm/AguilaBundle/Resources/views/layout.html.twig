{% extends '::base.html.twig' %}

{% block stylesheets %}
    {% stylesheets filter='less' output='/css/main.css'
        '@AguilaBundle/Resources/less/site.less'
        '@AguilaBundle/Resources/public/css/normalize.css'
    %}
    <link href="{{ asset_url }}" rel="stylesheet" media="screen" />
    {% endstylesheets %}
{% endblock %}

{% block body %}
<header>
    <h1><a href="{{ path('aguila_project_list')}} ">Aguila</a></h1>
    <nav>
        <ul>
        {% if app.security.token and app.security.isGranted('ROLE_USER')  %}
            <li><a href="{{ path('fos_user_profile_show') }}">{{ app.user }}</a></li>
            <li><a href="{{ path('fos_user_security_logout') }}">{{ 'layout.nav.logout'|trans([], 'AguilaBundle') }}</a></li>
        {% else %}
            <li><a href="{{ path('fos_user_security_login') }}">{{ 'layout.nav.login'|trans([], 'AguilaBundle') }}</a></li>
            <li><a href="{{ path('fos_user_registration_register') }}">{{'layout.nav.register'|trans([], 'AguilaBundle')}}</a></li>
        {% endif %}
        </ul>
    </nav>
</header>

<div id="content">
    {% block breadcrumbs %}{% endblock %}

    {% block content %}{% endblock %}
</div>
{% endblock body %}
