{% extends 'AguilaBundle::layout.html.twig' %}

{% block title 'project.edit.title'|trans([], 'AguilaBundle') %}

{% block content %}

<h2>{{ 'project.edit.title'|trans([], 'AguilaBundle') }}</h2>

<form action="{{ path('project_update', { 'id': project.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    {{ form_widget(edit_form) }}
    <a href="{{ path('project_show', {'id': project.id}) }}">{{ 'project.edit.cancel'|trans([], 'AguilaBundle') }}</a>
    <button type="submit">{{ 'project.edit.submit'|trans([], 'AguilaBundle') }}</button>
</form>

{% endblock %}