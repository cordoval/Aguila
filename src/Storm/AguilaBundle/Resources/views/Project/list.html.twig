{% extends 'AguilaBundle::layout.html.twig' %}

{% block title 'project.list.title'|trans([], 'AguilaBundle') %}

{% block content %}

<h2>
    {{ 'project.list.title'|trans([], 'AguilaBundle') }}
    <em>({{ projects|length }})</em>
    <a href="{{ path('aguila_project_new') }}">{{ 'project.list.new'|trans([], 'AguilaBundle') }}</a>
</h2>

<section>
    <ul>
        {% for project in projects %}
        <li>
            <h3>
                <a href="{{ path('aguila_project_show', {'slug': project.slug}) }}">{{ project.name }}</a>
                {% if is_granted('EDIT', project) -%}
                    <a href="{{ path('aguila_project_edit', {'slug': project.slug}) }}">edit</a>
                {%- endif %}
            </h3>
        </li>
        {% endfor %}
    </ul>
</section>

{% endblock %}
