{% extends 'AguilaBundle::layout.html.twig' %}

{% block title 'project.list.title'|trans([], 'AguilaBundle') %}

{% block sidebar %}

<div class="project_new">
    {% include 'AguilaBundle:Project:new.html.twig' with {'form': form} %}
</div>

<h3>{{ "project.list.title"|trans([], "AguilaBundle") }}</h3>

<ul class="unstyled zebra-striped">
    {% for project in projects %}
    <li>
        <a href="{{ path('aguila_project_show', {'slug': project.slug}) }}" >{{ project.name }}</a>
        <a href="{{ path('aguila_project_edit', {'slug': project.slug}) }}" class="icon cog"></a>
    </li>
    {% endfor %}
</ul>

{% endblock %}

{% block content %}
<h2>News</h2>

{% endblock %}